<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="right"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light">

        <ImageView
            android:id="@+id/reusePopupWindowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/compresspage16" />

        <ImageButton
            android:id="@+id/reusePopupWindowBackButton"
            android:layout_width="25dp"
            android:layout_height="100dp"
            android:layout_alignBottom="@+id/reusePopupWindowImageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/reusePopupWindowCloseButton"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:rotation="-90"
            android:scaleType="fitCenter"
            android:src="@drawable/bluetrianglebutton" />

        <ImageButton
            android:id="@+id/reusePopupWindowNextButton"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/reusePopupWindowImageView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/reusePopupWindowCloseButton"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:rotation="90"
            android:scaleType="fitCenter"
            android:src="@drawable/bluetrianglebutton" />

        <ImageButton
            android:id="@+id/reusePopupWindowCloseButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/transparent"
            android:rotation="45"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_input_add" />

        <ImageButton
            android:id="@+id/reusePopupWindowPuschase"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            android:scaleType="fitCenter"
            android:src="@drawable/purchasebutton" />

    </RelativeLayout>

</LinearLayout>