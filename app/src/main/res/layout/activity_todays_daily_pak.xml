<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="18dp"
    android:padding="0dp"
    tools:context="plannedactsofkindness.org.plannedactsofkindness.UI.TodaysDailyPAK">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Planned Acts of Kindness"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:src="@drawable/paklogohigh"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coming Soon:"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/comingSoonContent"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/comingSoonContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:background="@color/colorAccent"
        android:text="  Your Daily PAK!  "
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_above="@+id/textView11"
        android:layout_centerHorizontal="true" />"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:text="To Launch our Daily PAKS,\nwe need to have 100,000\n members in the Karma Club.\n\nHelp us make it happen."
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:layout_above="@+id/inviteOthersImageButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/inviteOthersImageButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/inviteothershigh"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What Goes Around, Comes Around!"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="italic"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/include3"
        android:layout_centerHorizontal="true" />

    <include
        android:id="@+id/include3"
        layout="@layout/reusable_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
